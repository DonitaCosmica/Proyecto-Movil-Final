<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- El tema base de la app. -->
    <style name="Theme.ProyectoMovilFinal" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Color. -->
        <item name="colorPrimary">@color/blue_gray_800</item>
        <item name="colorPrimaryVariant">@color/blue_gray_900</item>

        <item name="colorSecondary">@color/teal_100</item>
        <item name="colorSecondaryVariant">@color/teal_100</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/blue_gray_800</item>
        <item name="colorPrimarySurfaceVariant">@color/blue_gray_200</item>
        <item name="colorError">@color/red_700</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/blue_gray_800</item>
        <item name="colorOnSurface">@color/blue_gray_900</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Tipografia -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.ProyectoMovilFinal.H1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ProyectoMovilFinal.H2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ProyectoMovilFinal.Body1</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_gray_900</item>
    </style>

    <style name="Theme.ProyectoMovilFinal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProyectoMovilFinal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProyectoMovilFinal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>