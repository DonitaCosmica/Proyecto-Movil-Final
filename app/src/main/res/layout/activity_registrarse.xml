<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="registrarUsuario"
    tools:context=".IniciarSesionActivity">

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="705dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/text_correo_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/text_correo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/text_contrasena_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/text_contrasena"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/text_contrasenaConfirmacion_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/text_contrasenaConfirmar"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_registrarse_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="registrarUsuario"
            android:text="@string/btn_registrarse" />

        <Button
            android:id="@+id/btn_regresar_iniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="irIniciarSesion"
            android:text="@string/btn_regresar_iniciarSesion" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>